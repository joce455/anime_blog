<% include ../partials/header %>
	<div class="container">
		<div class="row">
	<h1 style="text-align: center">Edit anime</h1>
	<div style="width: 30%; margin:0 auto">
	<form action="/animes/<%= anime._id %>?_method=PUT" method="POST">
		 <div class="form-group"> 
		<input class= "form-control" type="text" placeholder="Camp Name" name="anime[name]" value="<%=  anime.name %>"> 
		 </div>
		 <div class="form-group">
		<input  class= "form-control" type="text" placeholder="Image" name="anime[image]" value="<%=  anime.image %>">
		</div>
		<div class="form-group">
		<input  class= "form-control" type="text" placeholder="Description" name="anime[description]" value="<%=  anime.description %>">
		</div>
		<button class="btn btn-lg btn-primary btn-block" type="submit" >Edit anime</button>
	</form>
	 <a href="/animes"> Go back</a>
	</div>
	</div>
	<% include ../partials/footer %>
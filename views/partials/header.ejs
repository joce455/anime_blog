<html>
<body>
<head>
    <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
    <title>Animes</title>
 <div class=" navbar navbar-default">
  <div class=" container-fluid">
   <div class=" navbar-header">
     <a class="navbar-brand" href="/animes"> Anime blog</a>
    </div>
    <div class="collapse navbar-collapse">
     <ul class="nav navbar-nav navbar-right">
       <% if( !currentUser) { %>

      <li><a class="navbar-brand" href="/login"> Login</a></li>
      <li><a class="navbar-brand" href="/signup"> Register</a></li>

      <% } else { %>

        <li><a class="navbar-brand"> User: <b ><%= currentUser.local.userName %> </b></a></li>
        
      <li><a class="navbar-brand" href="/logout"> Log out</a></li>

     <% } %>


     </ul>
     </div>
   </div>
  </div>
  <% if (error.length > 0) { %>
  <div class="container">
    <div class="alert alert-danger"><%= error %></div>
</div>
<% } %>

<% if (success.length > 0) { %>
  <div class="container">
    <div class="alert alert-success"><%= success %></div>
</div>
<% } %>
</head>


